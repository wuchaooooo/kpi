<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            上传附件
        </h1>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <form action="/student/upload" role="form" enctype="multipart/form-data" , method="post">
        <div class="col-lg-4">
            <div class="form-group">
                <label>重命名</label>
                <input class="form-control" placeholder="您可以重命名您上传的文件" name="renameFile">
            </div>

            <div class="form-group">
                <label>请选择您要上传的附件:</label>
                <input type="file" name="file">
            </div>

            <div class="form-group">
                $!{uploadError}
            </div>

            <button type="submit" class="btn btn-default">提交</button>
        </div>
    </form>
    <div class="col-lg-12"></div>
    <div class="col-lg-8" style="margin-top:30px;">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i>上传记录</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="upload-table">
                        <thead>
                        <tr>
                            <th class="date sortable"><a href="#">日期</a><i class="fa fa-sort"></i></th>
                            <th class="name sortable"><a href="#">附件名称</a><i class="fa fa-sort"></i></th>
                            <th class="action"></th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($!{studentFile} in $!{studentFiles})
                            <tr>
                                <td class="date">$!{studentFile.createTime}</td>
                                <td class="name">$!{studentFile.name}</td>
                                <td class="action"><a href="/student/download/$!{studentFile.id}" methods="get">下载</a>
                                </td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
