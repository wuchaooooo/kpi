<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            反馈意见
        </h1>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-10">

        <table class="table table-bordered table-striped" id="feedback-table">
            <thead>
            <tr>
                <th class="stuName sortable"><a href="#">姓名</a><i class="fa fa-sort"></i></th>
                <th class="date sortable"><a href="#">日期</a><i class="fa fa-sort"></i></th>
                <th class="type sortable"><a href="#">反馈类型</a><i class="fa fa-sort"></i></th>
                <th class="comment sortable"><a href="#">内容</a><i class="fa fa-sort"></i></th>
                <th class="action"></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td class="stuName">张三</td>
                <td class="date">2016/04/07</td>
                <td class="type">反馈</td>
                <td class="comment">上课进度有点快。</td>
                <td>
                    <a href="#" class="float-r" style="color:red;">删除</a>
                </td>
            </tr>
            <tr>
                <td class="stuName">李四</td>
                <td class="date">2016/02/04</td>
                <td class="type">表扬</td>
                <td class="comment">王老师特别耐心。</td>
                <td>
                    <a href="#" class="float-r" style="color:red;">删除</a>
                </td>
            </tr>
            <tr>
                <td class="stuName">王五</td>
                <td class="date">2016/03/07</td>
                <td class="type">反馈</td>
                <td class="comment">学得有点累。</td>
                <td>
                    <a href="#" class="float-r" style="color:red;">删除</a>
                </td>
            </tr>
            </tbody>
        </table>
        <button type="submit" id="create-feedback" class="btn btn-default float-r">添加</button>
    </div>
    <form role="form" id="feedback-form">
        <div class="col-lg-6">
            <div class="form-group col-lg-12">
                <label>请记录学生对轻课学院的意见或建议</label>
            </div>

            <div class="form-group col-lg-4">
                <label>姓名</label>
                <input class="form-control form-stuName">
            </div>
            <div class="form-group col-lg-4">
                <label>日期</label>
                <input class="form-control form-date">
            </div>
            <div class="form-group col-lg-3">
                <label>类别:</label>
                <select class="form-control">
                    <option>投诉</option>
                    <option>建议</option>
                    <option>表扬</option>
                </select>
            </div>

            <div class="form-group col-lg-12">
                <textarea class="form-control" rows="10" class="form-comment"></textarea>
            </div>

            <div class="form-group col-lg-12">
                <button type="submit" class="btn btn-default">提交</button>
            </div>
        </div>
    </form>
</div>
