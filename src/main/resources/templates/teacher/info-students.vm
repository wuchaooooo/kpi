<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            学生信息
        </h1>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                信息详情
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>序号 <i class="fa fa-sort"></i></th>
                        <th>学号 <i class="fa fa-sort"></i></th>
                        <th>姓名 <i class="fa fa-sort"></i></th>
                        <th>班级 <i class="fa fa-sort"></i></th>
                        <th>邮箱 <i class="fa fa-sort"></i></th>
                        <th>电话 <i class="fa fa-sort"></i></th>
                        <th>老师 <i class="fa fa-sort"></i></th>
                    </tr>
                    </thead>
                    <tbody>
                    #set($i = 0)
                    #foreach($student in $students)
                        #set($i = $i + 1)
                    <tr>
                        <td >$i</td>
                        <td>$student.userName</td>
                        <td>$student.realName</td>
                        <td>$student.className</td>
                        <td>$student.email</td>
                        <td>$student.mobile</td>
                        <td>$student.teacher</td>
                    </tr>
                    #end
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

<script src="/js/admin.js"></script>
